<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twelo.mylist.About"
    android:background="@color/MainList_Back">

    <include
        layout="@layout/app_bar"
        android:id="@+id/About_include"/>

    <TextView
        android:layout_below="@id/About_include"
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:textColor="@android:color/black"
        android:layout_below="@id/about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/About_text"
        android:text="MyList is an app which help you to make a List of all your day to day work..\n\nNow you don't have to remember what you have to do when\n- you will go to market\n- when you will meet anyone\n- when you are noting down important work\n\nNow you don't have to take a notepad and carry it where ever you go... Just this app is enough for you.."/>

    <TextView
        android:layout_below="@id/About_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"

        android:text="\n\nSend your Feedback on : \nagrawal99saurabh@gmail.com\n\nSaurabh Agrawal"/>


</RelativeLayout>
