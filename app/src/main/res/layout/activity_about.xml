<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainList_Back"
    tools:context="com.twelo.mylist.About">

    <include
        android:id="@+id/About_include"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/About_include"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="MyList"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/ImageAbout"
        android:layout_below="@id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main" />

    <TextView
        android:id="@+id/textAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImageAbout"
        android:text="Make List of your day to day work"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/emailAbout"
        android:layout_below="@id/textAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send your feedback on :\nagrawal99saurabh@gmail.com"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_below="@id/emailAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:text="Saurabh Agrawal"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        />

</RelativeLayout>
