<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twelo.mylist.AllActivity"
    android:background="@color/MainList_Back">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/fake_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Merge List"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/fake_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fake_title"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Select List you want to merge"
        android:textSize="20sp" />


    <ListView

        android:id="@+id/merge_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fake_text"></ListView>
</RelativeLayout>
